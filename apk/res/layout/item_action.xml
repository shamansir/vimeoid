<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"              
              android:layout_width="fill_parent"
              android:layout_height="@dimen/action_item_height">
    <ImageView android:id="@+id/actionIcon"
               android:layout_width="@dimen/action_icon_side"
               android:layout_height="@dimen/action_icon_side"
               android:layout_margin="2dp" />
    <TextView android:id="@+id/actionName"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_vertical"              
              android:textSize="@dimen/item_action_font_size"
              android:textColor="@color/action_item_text"
              android:paddingLeft="6dp"
              android:lines="1"
              android:ellipsize="marquee"
              android:scrollHorizontally="true" />
</LinearLayout>
