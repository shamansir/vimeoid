<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">    
    <ImageView android:id="@+id/userItemImage"
               android:layout_width="@dimen/item_portrait_width"
               android:layout_height="@dimen/item_portrait_height"
               android:background="@color/item_thumb_bg"
               android:layout_gravity="left" />               
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="@dimen/item_portrait_height"
                  android:layout_gravity="left"
                  android:paddingRight="2dp"
                  android:paddingTop="2dp"
                  android:paddingBottom="2dp"
                  android:paddingLeft="5dp">
	    <TextView android:id="@+id/userItemDisplayName"
                  android:layout_width="fill_parent" 
	              android:layout_height="wrap_content"
	              android:textSize="@dimen/item_title_font_size"
	              android:textColor="@color/item_title"
	              android:lines="1"
	              android:ellipsize="marquee"	              
	              android:scrollHorizontally="true"
	              android:text="Ulric Wilfred [user12612]" />
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:weightSum="1">
	        <TextView android:id="@+id/userItemLocation"
	                  android:layout_width="wrap_content" 
	                  android:layout_height="wrap_content"
	                  android:layout_weight="0.9" 
	                  android:textSize="@dimen/item_subtitle_font_size"
	                  android:textColor="@color/item_subtitle"
	                  android:text="user12526" />
                 <!-- android:lines="1"
                      android:ellipsize="marquee"
                      android:scrollHorizontally="true" -->
            <include android:id="@+id/markersArea"
                     layout="@layout/markers"
                     android:layout_weight="0.1"
                     android:layout_marginRight="-5dp"
                     android:layout_marginTop="2dp" 
                     android:layout_gravity="right|bottom"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout android:id="@+id/userItemTags"
                      android:layout_width="fill_parent" 
                      android:layout_height="@dimen/tags_line_height" />
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent">
             <LinearLayout android:orientation="horizontal"
                           android:layout_width="wrap_content"
                           android:layout_height="fill_parent"
                           android:layout_weight="1">
                 <LinearLayout android:orientation="horizontal"
                               android:layout_width="wrap_content"
                               android:layout_height="fill_parent">
                     <ImageView android:layout_width="wrap_content" 
                                android:layout_height="fill_parent"
                                android:src="@drawable/video_small" />                               
		             <TextView android:id="@+id/userItemNumOfVideos"
		                       android:layout_width="wrap_content" 
		                       android:layout_height="fill_parent" 
		                       android:layout_marginLeft="3dp"
		                       android:paddingTop="1dp"
		                       android:text="videos"
		                       android:textStyle="bold"	                       
		                       android:textSize="@dimen/item_info_font_size"
		                       android:textColor="@color/item_info" />
	             </LinearLayout>
                 <LinearLayout android:orientation="horizontal"
                               android:layout_width="wrap_content"
                               android:layout_height="fill_parent"
                               android:layout_marginLeft="3dp">
                     <ImageView android:layout_width="wrap_content" 
                                android:layout_height="fill_parent"
                                android:src="@drawable/album_small"
                                android:paddingTop="1dp"
                                android:paddingLeft="2dp" />                            
                     <TextView android:id="@+id/videoItemNumOfAlbums"
                               android:layout_width="wrap_content" 
                               android:layout_height="fill_parent" 
                               android:layout_marginLeft="3dp"
                               android:text="albums"                            
                               android:textStyle="bold"
                               android:textSize="@dimen/item_info_font_size"
                               android:textColor="@color/item_info" />
                 </LinearLayout>
                 <LinearLayout android:orientation="horizontal"
                               android:layout_width="wrap_content"
                               android:layout_height="fill_parent"
                               android:layout_marginLeft="3dp">
                     <ImageView android:layout_width="wrap_content" 
                                android:layout_height="fill_parent"
                                android:src="@drawable/channel_small"
                                android:paddingTop="1dp"
                                android:paddingLeft="2dp" />                            
                     <TextView android:id="@+id/videoItemNumOfChannels"
                               android:layout_width="wrap_content" 
                               android:layout_height="fill_parent" 
                               android:layout_marginLeft="3dp"
                               android:text="channels"                            
                               android:textStyle="bold"
                               android:textSize="@dimen/item_info_font_size"
                               android:textColor="@color/item_info" />
                 </LinearLayout>
                 <LinearLayout android:orientation="horizontal"
                               android:layout_width="wrap_content"
                               android:layout_height="fill_parent"
                               android:layout_marginLeft="3dp">
                     <ImageView android:layout_width="wrap_content" 
                                android:layout_height="fill_parent"
                                android:src="@drawable/contact_small"
                                android:paddingTop="2dp"
                                android:paddingLeft="2dp" />                               
                     <TextView android:id="@+id/userItemNumOfContacts"
                               android:layout_width="wrap_content" 
                               android:layout_height="fill_parent" 
                               android:layout_marginLeft="3dp"
                               android:text="contacts"                               
                               android:textStyle="bold"                     
                               android:textSize="@dimen/item_info_font_size"
                               android:textColor="@color/item_info" />
                 </LinearLayout>                 
             </LinearLayout>		                         
        </LinearLayout>                         	              
    </LinearLayout>
</LinearLayout>