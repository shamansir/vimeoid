<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
    <include android:id="@+id/titleBar" 
             layout="@layout/item_subject_titlebar" />
    <include android:id="@+id/progressBar"
             layout="@layout/progress_bar_line" />
	<ListView android:id="@android:id/list"
	          android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:layout_weight="1"
	          android:transcriptMode="normal"
	          android:divider="#f333"
	          android:dividerHeight="1dp"
	          android:listSelector="@drawable/selector_bg" />
    <include android:id="@+id/emptyView"
             layout="@layout/item_list_empty" />	      
</LinearLayout>
