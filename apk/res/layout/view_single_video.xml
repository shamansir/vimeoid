<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_weight="1"
                  android:layout_gravity="left">
        <LinearLayout android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_weight="1"
                  android:layout_gravity="top">
	        <TextView android:layout_width="fill_parent" 
	                  android:layout_height="wrap_content" 
	                  android:text="Title"
	                  android:textSize="@dimen/item_title_font_size" />
	        <TextView android:layout_width="fill_parent" 
	                  android:layout_height="wrap_content" 
	                  android:text="author"
	                  android:textSize="@dimen/item_subtitle_font_size" />
	        <TextView android:layout_width="fill_parent" 
	                  android:layout_height="wrap_content" 
	                  android:text="duration"
	                  android:textSize="@dimen/item_param_font_size" />
	        <TextView android:layout_width="fill_parent" 
	                  android:layout_height="wrap_content" 
	                  android:text="tags"
	                  android:textSize="@dimen/item_info_font_size" />
	        <TextView android:layout_width="fill_parent" 
	                  android:layout_height="wrap_content" 
	                  android:text="created on"
	                  android:textSize="@dimen/item_info_font_size" />
	        <TextView android:layout_width="fill_parent" 
	                  android:layout_height="wrap_content" 
	                  android:text="some more info"
	                  android:textSize="@dimen/item_info_font_size" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/tabbar_height"
                  android:layout_gravity="bottom">
			<Button android:id="@+id/creditsOfVideoButton"
			        android:layout_width="@dimen/tabbar_height"
			        android:layout_height="fill_parent"
			        android:padding="0dp"        
			        android:text="Credits" />
			<Button android:id="@+id/tagsOfVideoButton"
			        android:layout_width="@dimen/tabbar_height"
			        android:layout_height="fill_parent"
			        android:padding="0dp"        
			        android:text="Tags" />
            <Button android:id="@+id/channelsOfVideoButton"
                    android:layout_width="@dimen/tabbar_height"
                    android:layout_height="fill_parent"
                    android:padding="0dp"        
                    android:text="Channels" />
        </LinearLayout>                                                         
    </LinearLayout>
    <ImageView android:layout_width="@dimen/single_thumb_width"
               android:layout_height="@dimen/single_thumb_height"
               android:layout_gravity="right"
               android:background="#f00" />    
</LinearLayout>