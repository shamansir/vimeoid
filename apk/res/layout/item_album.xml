<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/item_default_height">
    <ImageView android:id="@+id/albumItemImage"
               android:layout_width="@dimen/item_thumb_width"
               android:layout_height="@dimen/item_thumb_height"
               android:layout_gravity="left"
               android:background="@color/item_thumb_bg" />
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:layout_gravity="left|center_vertical"                  
                  android:paddingRight="2dp"
                  android:paddingTop="2dp"
                  android:paddingBottom="2dp"
                  android:paddingLeft="5dp">
        <TextView android:id="@+id/albumItemTitle"
                  android:layout_width="fill_parent" 
                  android:layout_height="fill_parent"
                  android:layout_weight="0.21"
                  android:textSize="@dimen/item_title_font_size"
                  android:textColor="@color/item_title"
                  android:lines="1"
                  android:ellipsize="marquee"                 
                  android:scrollHorizontally="true"
                  android:text="Titlegyfj" />
        <!-- <TextView android:id="@+id/albumItemAuthor"
                  android:layout_width="fill_parent" 
                  android:layout_height="fill_parent"
                  android:layout_weight="0.22"                              
                  android:textSize="@dimen/item_subtitle_font_size"
                  android:textColor="@color/item_subtitle"                  
                  android:lines="1"
                  android:ellipsize="marquee"
                  android:scrollHorizontally="true"
                  android:text="Authorghyj" />  -->
        <TextView android:id="@+id/albumItemUpdatedOn"
                  android:layout_width="fill_parent" 
                  android:layout_height="fill_parent"
                  android:layout_weight="0.20"
                  android:textSize="@dimen/item_tags_font_size"
                  android:textColor="@color/item_subtitle"
                  android:lines="1"
                  android:ellipsize="marquee"
                  android:scrollHorizontally="true"
                  android:text="Created onghyj" />
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:layout_weight="0.25">
              <LinearLayout android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent">
                  <ImageView android:layout_width="wrap_content" 
                             android:layout_height="fill_parent"
                             android:src="@drawable/video_small"
                             android:paddingTop="1dp" />                               
                  <TextView android:id="@+id/albumItemNumOfVideos"
                            android:layout_width="wrap_content" 
                            android:layout_height="fill_parent" 
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="2dp"
                            android:text="videos"
                            android:textStyle="bold"                           
                            android:textSize="@dimen/item_info_font_size"
                            android:textColor="@color/item_info" />
              </LinearLayout>
          </LinearLayout>                                
     </LinearLayout>
</LinearLayout>