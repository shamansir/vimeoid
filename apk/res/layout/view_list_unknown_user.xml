<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/progressBar" 
                  android:layout_width="fill_parent"
                  android:layout_height="@dimen/small_progressbar_height"
                  android:padding="2px"
                  android:background="@color/progress_bg">
	    <ProgressBar android:layout_width="@dimen/small_progress_side"
	                 android:layout_height="@dimen/small_progress_side" />
    </LinearLayout>
	<ListView android:id="@android:id/list"
	          android:layout_width="fill_parent"
	          android:layout_height="0dp"
	          android:layout_weight="1"
	          android:stackFromBottom="true"
	          android:transcriptMode="normal"
	          android:divider="#333"
	          android:dividerHeight="1dp" />
</LinearLayout>
