<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/load_more_height"
        android:background="@drawable/grey_border_on_black">
    <ImageView android:id="@+id/itemsEmptyListImage"
               android:layout_width="@dimen/item_thumb_width"
               android:layout_height="@dimen/load_more_height"
               android:src="@drawable/load_more_small"
               android:layout_gravity="left"
               android:background="@color/item_thumb_bg" />      
    <TextView android:id="@+id/itemsEmptyListView"
              android:layout_width="fill_parent" 
              android:layout_height="@dimen/load_more_height"
              android:layout_marginLeft="3dp"
              android:padding="2dp"
              android:gravity="center_vertical"
              android:text="@string/no_items_in_list"
              android:textSize="@dimen/item_title_font_size"
              android:textColor="@color/item_title" />
</LinearLayout>