<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="@dimen/tabbar_height"
                  android:layout_gravity="top">
	    <Button android:id="@+id/myVideosButton"
	        android:layout_width="@dimen/tabbar_height"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:padding="0dp"        
	        android:text="Videos" />
	    <Button android:id="@+id/myAlbumsButton"
	        android:layout_width="@dimen/tabbar_height"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"        
	        android:padding="0dp"        
	        android:text="Albums" />
	    <Button android:id="@+id/myChannelsButton"
	        android:layout_width="@dimen/tabbar_height"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"        
	        android:padding="0dp"        
	        android:text="Channels" />
	    <Button android:id="@+id/myLikesButton"
	        android:layout_width="@dimen/tabbar_height"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"        
	        android:padding="0dp"        
	        android:text="Likes" />
	    <Button android:id="@+id/myGroupsButton"
	        android:layout_width="@dimen/tabbar_height"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"        
	        android:padding="0dp"        
	        android:text="Groups" />
	    <Button android:id="@+id/mySearchButton"
	        android:layout_width="@dimen/tabbar_height"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"        
	        android:padding="0dp"        
	        android:text="Search" />        
	</LinearLayout>
    <ListView android:id="@android:id/list"
              android:layout_width="fill_parent"
              android:layout_height="0dip"
              android:layout_weight="1"
              android:stackFromBottom="true"
              android:transcriptMode="normal" 
    />
</LinearLayout>
